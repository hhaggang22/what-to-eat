<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- 가게 대표 이미지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219.8dp">

            <ImageView
                android:id="@+id/store_detail_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/west_13" />
        </LinearLayout>

        <!-- 가게 이름 -->
        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="STORE"
            android:textColor="#111"
            android:textSize="19dp"
            android:fontFamily="@font/notosanscjkkr_medium"/>
        <!-- 가게 태그 -->
        <TextView
            android:id="@+id/storeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="5dp"
            android:text="HASHTAG"
            android:textColor="#763aff"
            android:textSize="15dp"
            android:fontFamily="@font/notosanscjkkr_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/storedetail_shadow" />

        <!-- 대표 메뉴 -->
        <TextView
            android:id="@+id/storeMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="대표 메뉴"
            android:textColor="#111"
            android:textSize="19dp"
            android:fontFamily="@font/notosanscjkkr_medium"/>

        <!-- 메뉴1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/storeMenu1"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="-10dp"
                    android:text="1"
                    android:textColor="#111"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/storeMenuName1"
                    android:layout_toRightOf="@id/storeMenu1"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layerType="software"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <TextView
                    android:id="@+id/storeMenuName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="-10dp"
                    android:text="MENU1"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- 메뉴2 -->
        <LinearLayout
            android:id="@+id/menu2_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/storeMenu2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="-10dp"
                    android:text="2"
                    android:textColor="#111"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/storeMenuName2"
                    android:layout_toRightOf="@id/storeMenu2"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layerType="software" />

                <TextView
                    android:id="@+id/storeMenuName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="-10dp"
                    android:text="MENU2"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#D8D8D8" />

        <!-- 가게 주소 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/storedetail_pin" />

            <TextView
                android:id="@+id/storeAdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="ADDRESS"
                android:textColor="#111"
                android:textSize="15dp"
                android:fontFamily="@font/notosanscjkkr_regular"/>
        </LinearLayout>

        <!-- 구글맵 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:weightSum="360">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="310"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="25" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>